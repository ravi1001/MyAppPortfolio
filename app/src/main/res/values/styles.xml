<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Style for title textview in phone layout -->
    <style name="TitlePhoneStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <!-- Style for title textview in tablet layout -->
    <style name="TitleTabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <!-- Style for buttons in phone layout -->
    <style name="ButtonPhoneStyle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@drawable/button_all_apps</item>
    </style>

    <!-- Style for buttons in tablet layout -->
    <style name="ButtonTabStyle">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/button_all_apps</item>
    </style>

</resources>
