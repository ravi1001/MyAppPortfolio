<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- When the button is pressed -->
    <item android:drawable="@color/my_app_portfolio_light_red"
        android:state_pressed="true" />

    <!-- When the button has focus -->
    <item android:drawable="@color/my_app_portfolio_red"
        android:state_focused="true" />

    <!-- When the button is displayed, default state -->
    <item android:drawable="@color/my_app_portfolio_dark_red" />

</selector>